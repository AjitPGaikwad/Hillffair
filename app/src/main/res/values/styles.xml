<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#3c61d9</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="batman" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#686767</item>
        <item name="colorPrimaryDark">#2b2a2a</item>
        <item name="colorAccent">#efd518</item>
        <item name="android:textColor">#878383</item>
        <item name="android:windowBackground">@color/back_batman</item>
    </style>

    <style name="captainamerica" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#27b3e6</item>
        <item name="colorPrimaryDark">#128fbe</item>
        <item name="colorAccent">#f4303a</item>
        <item name="android:windowBackground">@color/back_captainamerica</item>
    </style>

    <style name="flash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#872b33</item>
        <item name="colorPrimaryDark">#5c1a20</item>
        <item name="colorAccent">#e1c355</item>
        <item name="android:windowBackground">@color/back_flash</item>
    </style>

    <style name="superman" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#1a81cc</item>
        <item name="colorPrimaryDark">#1467a3</item>
        <item name="colorAccent">#d4fc0e0e</item>
        <item name="android:windowBackground">@color/back_superman</item>
    </style>

    <style name="wonderwoman" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#f92d39</item>
        <item name="colorPrimaryDark">#dc222c</item>
        <item name="colorAccent">#ede921</item>
        <item name="android:windowBackground">@color/back_wonderwoman</item>
    </style>

    <style name="hulk" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#539f09</item>
        <item name="colorPrimaryDark">#1a6004</item>
        <item name="colorAccent">#b966df</item>
        <item name="android:windowBackground">@color/back_hulk</item>
    </style>

</resources>
